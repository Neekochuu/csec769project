<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="be.appfoundry.nfc.implementation.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/input_text_data"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/btn_write_email_nfc"
                android:layout_width="381dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:text="Write Text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#c0c0c0" />

            <EditText
                android:id="@+id/input_text_key"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:inputType="phone" />

            <Button
                android:id="@+id/btn_write_sms_nfc"
                android:layout_width="380dp"
                android:layout_height="48dp"
                android:text="Write Key" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#c0c0c0" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
